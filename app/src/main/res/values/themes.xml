<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
      Aquí defines tu tema de aplicación para vistas (no Compose).
      Usa parent="Theme.Material3.DayNight.NoActionBar" si tienes
      la librería de Material3 en tu Gradle.
    -->
    <style name="Theme.InventarioApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Aquí solucionas el "cannot resolve @color/…" asegurándote
             de que esos colores existan en res/values/colors.xml -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <!-- añade cuantos atributos necesites -->
    </style>

</resources>